<Window x:Class="VScreator.WorldGenCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VScreator"
        mc:Ignorable="d"
        Title="Create New World Gen" Height="600" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#1f1d1b"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Window.Resources>
        <Style x:Key="WorldGenInputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#2f2d2b"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="WorldGenLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

        <Style x:Key="WorldGenComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <ToggleButton
                                Name="ToggleButton"
                                Grid.Column="2"
                                Focusable="false"
                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="20" />
                                            </Grid.ColumnDefinitions>
                                            <Border
                                                x:Name="Border"
                                                Grid.ColumnSpan="2"
                                                CornerRadius="3"
                                                Background="#404040"
                                                BorderBrush="#404040"
                                                BorderThickness="1" />
                                            <Path
                                                x:Name="Arrow"
                                                Grid.Column="1"
                                                Fill="#ffffff"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Data="M 0 0 L 4 4 L 8 0 Z"/>
                                        </Grid>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter
                                Name="ContentSite"
                                IsHitTestVisible="False"
                                Content="{TemplateBinding SelectionBoxItem}"
                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left" />
                            <Popup
                                Name="Popup"
                                Placement="Bottom"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                AllowsTransparency="True"
                                Focusable="False"
                                PopupAnimation="Slide">
                                <Grid
                                    Name="DropDown"
                                    SnapsToDevicePixels="True"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border
                                        x:Name="DropDownBorder"
                                        Background="#2f2d2b"
                                        BorderThickness="1"
                                        BorderBrush="#404040"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WorldGenCreateButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#878e4c"/>
            <Setter Property="BorderBrush" Value="#5a5f3a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#9ba05c"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#6b7339"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BlockListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="#2f2d2b"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="World Gen Creator"
                   FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,25"
                   Foreground="#ffffff"/>

        <!-- Input Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Comment (Optional):" Style="{StaticResource WorldGenLabelStyle}"/>
                <TextBox x:Name="CommentTextBox" Style="{StaticResource WorldGenInputTextBoxStyle}"
                         Text="Lots of bones and carcasses underground"/>

                <TextBlock Text="Block Codes:" Style="{StaticResource WorldGenLabelStyle}"/>
                <TextBlock Text="Enter block codes separated by commas:" FontSize="12" Foreground="#cccccc" Margin="0,0,0,5"/>
                <TextBox x:Name="BlockCodesTextBox" Style="{StaticResource WorldGenInputTextBoxStyle}"
                         Text="game:bonyremains-cowskull-up, game:bonyremains-ribcage, game:drycarcass-humanoid1"/>

                <TextBlock Text="Placement:" Style="{StaticResource WorldGenLabelStyle}"/>
                <ComboBox x:Name="PlacementComboBox" Style="{StaticResource WorldGenComboBoxStyle}">
                    <ComboBoxItem Content="ReplaceSurface" Tag="ReplaceSurface"/>
                    <ComboBoxItem Content="OnSurface" Tag="OnSurface"/>
                    <ComboBoxItem Content="NearWater" Tag="NearWater"/>
                    <ComboBoxItem Content="Anywhere" Tag="Anywhere"/>
                    <ComboBoxItem Content="Underground" Tag="Underground"/>
                    <ComboBoxItem Content="UnderWater" Tag="UnderWater"/>
                    <ComboBoxItem Content="NearSeaWater" Tag="NearSeaWater"/>
                    <ComboBoxItem Content="UnderSeaWater" Tag="UnderSeaWater"/>
                    <ComboBoxItem Content="UnderTrees" Tag="UnderTrees"/>
                    <ComboBoxItem Content="OnTrees" Tag="OnTrees"/>
                    <ComboBoxItem Content="OnSurfacePlusUnderTrees" Tag="OnSurfacePlusUnderTrees"/>
                </ComboBox>

                <TextBlock Text="Rarity (Chance):" Style="{StaticResource WorldGenLabelStyle}"/>
                <TextBlock Text="Higher values = more rare (lower chance of spawning):" FontSize="12" Foreground="#cccccc" Margin="0,0,0,5"/>
                <TextBox x:Name="ChanceTextBox" Style="{StaticResource WorldGenInputTextBoxStyle}"
                         Text="120"/>

                <TextBlock Text="Quantity:" Style="{StaticResource WorldGenLabelStyle}"/>

                <TextBlock Text="Average:" Style="{StaticResource WorldGenLabelStyle}" Margin="20,10,0,5"/>
                <TextBox x:Name="QuantityAvgTextBox" Style="{StaticResource WorldGenInputTextBoxStyle}"
                         Text="1" Margin="20,0,20,0"/>

                <TextBlock Text="Variation:" Style="{StaticResource WorldGenLabelStyle}" Margin="20,15,0,5"/>
                <TextBox x:Name="QuantityVarTextBox" Style="{StaticResource WorldGenInputTextBoxStyle}"
                         Text="0" Margin="20,0,20,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                     HorizontalAlignment="Right" Margin="0,25,0,0">
            <Button x:Name="CreateWorldGenButton" Content="Create World Gen" Style="{StaticResource WorldGenCreateButtonStyle}"
                    Click="CreateWorldgenButton_Click"/>
            <Button Content="Cancel" Style="{StaticResource WorldGenCreateButtonStyle}"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
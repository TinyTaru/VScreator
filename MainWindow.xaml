<Window x:Class="VScreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VScreator"
        mc:Ignorable="d"
        Title="VScreator" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1f1d1b">

    <Window.Resources>
        <Style x:Key="RecentModItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#999999"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#878e4c"/>
            <Setter Property="BorderBrush" Value="#5a5f3a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#9ba05c"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#6b7339"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="VScreator" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="20" Foreground="#ffffff"/>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar - Recent Mods -->
            <Border Grid.Column="0" Background="#E0E0E0" Margin="10" CornerRadius="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Recent Mods" FontSize="16" FontWeight="SemiBold"
                                   Margin="0,0,0,15" Foreground="#ffffff"/>

                        <ListBox Background="Transparent" BorderThickness="0">
                            <ListBoxItem Content="Recent Mod" Style="{StaticResource RecentModItemStyle}" Margin="0,2"/>
                            <ListBoxItem Content="Recent Mod" Style="{StaticResource RecentModItemStyle}" Margin="0,2"/>
                            <ListBoxItem Content="Recent Mod" Style="{StaticResource RecentModItemStyle}" Margin="0,2"/>
                            <ListBoxItem Content="Recent Mod" Style="{StaticResource RecentModItemStyle}" Margin="0,2"/>
                            <ListBoxItem Content="Recent Mod" Style="{StaticResource RecentModItemStyle}" Margin="0,2"/>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Content Area - Action Buttons -->
            <Border Grid.Column="1" Background="#2f2d2b" Margin="10" CornerRadius="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40">
                    <Button Content="+ New Mod" Style="{StaticResource ActionButtonStyle}"
                            Width="200" Height="50" Margin="0,0,0,20" Click="NewModButton_Click"/>
                    <Button Content="Open Mod" Style="{StaticResource ActionButtonStyle}"
                            Width="200" Height="50" Click="OpenModButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>

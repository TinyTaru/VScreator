<Window x:Class="VScreator.RecipeCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VScreator"
        mc:Ignorable="d"
        Title="Recipe Creator" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1f1d1b">

    <Window.Resources>
        <!-- Recipe Type Button Style -->
        <Style x:Key="RecipeTypeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#878e4c"/>
            <Setter Property="BorderBrush" Value="#5a5f3a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#9ba05c"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#6b7339"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2f2d2b"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5,5,0,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3f3d3b"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1f1d1b"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Grid Cell Style -->
        <Style x:Key="GridCellStyle" TargetType="Border">
            <Setter Property="Background" Value="#2f2d2b"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Width" Value="64"/>
            <Setter Property="Height" Value="64"/>
        </Style>

        <!-- Icon Style -->
        <Style x:Key="IconStyle" TargetType="Image">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Stretch" Value="Uniform"/>
        </Style>

        <!-- Ingredient Icon Style -->
        <Style x:Key="IngredientIconStyle" TargetType="Border">
            <Setter Property="Background" Value="#2f2d2b"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Recipe Creator" FontSize="32" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,30" Foreground="#ffffff"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <Border Grid.Column="0" Background="#2f2d2b" Margin="0,0,20,0" CornerRadius="5" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Recipe Type Section -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,25">
                        <TextBlock Text="Recipe Type" FontSize="18" FontWeight="SemiBold"
                                   Margin="0,0,0,15" Foreground="#ffffff"/>
                        <Button x:Name="GridRecipeButton" Content="Grid" 
                                Style="{StaticResource RecipeTypeButtonStyle}"
                                Click="GridRecipeButton_Click"/>
                    </StackPanel>

                    <!-- Tabs Section -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,25">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Button x:Name="ItemsTabButton" Content="Items" 
                                    Style="{StaticResource TabButtonStyle}"
                                    Click="ItemsTabButton_Click"/>
                            <Button x:Name="BlocksTabButton" Content="Blocks" 
                                    Style="{StaticResource TabButtonStyle}"
                                    Click="BlocksTabButton_Click"/>
                        </StackPanel>

                        <!-- Search Bar -->
                        <TextBox x:Name="SearchTextBox" Background="#1f1d1b" Foreground="#ffffff"
                                 BorderBrush="#404040" Margin="0,0,0,10" Padding="8"
                                 TextChanged="SearchTextBox_TextChanged"/>
                        <TextBlock Text="Search ingredients..." FontSize="10" Foreground="#888888"
                                   Margin="0,0,0,5" HorizontalAlignment="Left"/>
                        <!-- Items/Blocks Display Area -->
                        <Border Background="#1f1d1b" CornerRadius="3" Padding="10" MinHeight="400" MaxHeight="570">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" CanContentScroll="True">
                                <ItemsControl x:Name="IngredientsPanel" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" ItemWidth="75" ItemHeight="75" Width="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=ViewportWidth}"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource IngredientIconStyle}" Cursor="Hand" Margin="3" Width="70" Height="70"
                                                    MouseLeftButtonDown="IngredientBorder_PreviewMouseLeftButtonDown"
                                                    PreviewMouseMove="IngredientBorder_PreviewMouseMove"
                                                    PreviewMouseLeftButtonUp="IngredientBorder_PreviewMouseLeftButtonUp"
                                                    AllowDrop="True" Tag="{Binding}">
                                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Image Width="40" Height="40" Margin="2" Stretch="Uniform" Source="{Binding Icon}" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding DisplayName}" Foreground="#cccccc" HorizontalAlignment="Center" TextWrapping="Wrap" MaxWidth="60" Margin="1" FontSize="7" TextAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>

                    <!-- Output Selection -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,25">
                        <TextBlock Text="Recipe Output" FontSize="18" FontWeight="SemiBold"
                                    Margin="0,0,0,15" Foreground="#ffffff"/>

                        <TextBlock Text="Drag an item here to set as recipe output:" FontSize="12" Margin="0,0,0,10" Foreground="#cccccc"/>
                        <Border x:Name="OutputPreviewBorder" Background="#1f1d1b" CornerRadius="3"
                                Padding="10" Margin="0,0,0,15" MinHeight="60"
                                AllowDrop="True" Cursor="Hand"
                                DragEnter="OutputSlot_DragEnter"
                                DragLeave="OutputSlot_DragLeave"
                                Drop="OutputSlot_Drop">
                            <TextBlock x:Name="OutputPreviewText" Text="No output selected"
                                       Foreground="#888888" HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="3">
                        <Button Content="Reset"
                                Background="#666666" BorderBrush="#555555" Foreground="#ffffff"
                                FontSize="12" Padding="10,5"
                                HorizontalAlignment="Center" Click="ResetButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel - Crafting Grid and Output -->
            <Border Grid.Column="1" Background="#2f2d2b" CornerRadius="5" Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Grid Size Selector -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Grid Size:" FontSize="16" Foreground="#ffffff"
                                   VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <ComboBox x:Name="GridSizeComboBox" Width="100" Background="#1f1d1b" Foreground="#ffffff"
                                  BorderBrush="#404040" SelectionChanged="GridSizeComboBox_SelectionChanged">
                            <ComboBoxItem Content="1x1"/>
                            <ComboBoxItem Content="2x2"/>
                            <ComboBoxItem Content="3x3" IsSelected="True"/>
                            <ComboBoxItem Content="4x4"/>
                            <ComboBoxItem Content="5x5"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Main Content Area -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Crafting Grid -->
                        <Border Grid.Column="0" Background="#1f1d1b" CornerRadius="5" Padding="30" Margin="0,0,15,0" AllowDrop="True">
                            <Grid x:Name="CraftingGrid" HorizontalAlignment="Center" VerticalAlignment="Center" AllowDrop="True">
                                <!-- Grid cells will be dynamically generated -->
                            </Grid>
                        </Border>

                        <!-- Output Slot -->
                        <Border Grid.Column="1" Background="#1f1d1b" CornerRadius="5" Padding="20" Width="120" AllowDrop="True" Cursor="Hand"
                                DragEnter="OutputSlot_DragEnter"
                                DragLeave="OutputSlot_DragLeave"
                                Drop="OutputSlot_Drop">
                            <StackPanel>
                                <TextBlock Text="Output" FontSize="14" FontWeight="SemiBold"
                                           Margin="0,0,0,15" Foreground="#ffffff" HorizontalAlignment="Center"/>
                                <Border Background="#2f2d2b" CornerRadius="3" Padding="15" MinHeight="80">
                                    <Image x:Name="OutputSlotImage" Stretch="Uniform" HorizontalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="OutputSlotText" Text="Drop item here" FontSize="10"
                                           Foreground="#888888" HorizontalAlignment="Center"
                                           TextWrapping="Wrap" Margin="5,5,5,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Recipe Creation Panel -->
                    <Border Grid.Row="2" Background="#1f1d1b" CornerRadius="5" Padding="20" Margin="0,25,0,0">
                        <StackPanel>
                            <TextBlock Text="Recipe Details" FontSize="16" FontWeight="SemiBold"
                                       Margin="0,0,0,15" Foreground="#ffffff" HorizontalAlignment="Center"/>

                            <!-- Recipe Name -->
                            <TextBlock Text="Recipe Name:" FontSize="12" Margin="0,0,0,5" Foreground="#cccccc"/>
                            <TextBox x:Name="RecipeNameTextBox" Background="#2f2d2b" Foreground="#ffffff"
                                     BorderBrush="#404040" Margin="0,0,0,15" Padding="8" Text="new_recipe"/>

                            <!-- Output Quantity -->
                            <TextBlock Text="Output Quantity:" FontSize="12" Margin="0,0,0,5" Foreground="#cccccc"/>
                            <TextBox x:Name="OutputQuantityTextBox" Background="#2f2d2b" Foreground="#ffffff"
                                     BorderBrush="#404040" Margin="0,0,0,20" Padding="8" Text="1"/>

                            <!-- Create Recipe Button -->
                            <Button x:Name="CreateRecipeButton" Content="Create Recipe"
                                    Style="{StaticResource RecipeTypeButtonStyle}"
                                    HorizontalAlignment="Center" Click="CreateRecipeButton_Click"
                                    Padding="30,12" FontSize="16"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
<Window x:Class="VScreator.ItemCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VScreator"
        mc:Ignorable="d"
        Title="Create New Item" Height="350" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#1f1d1b"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Window.Resources>
        <Style x:Key="ItemInputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#2f2d2b"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ItemLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

        <Style x:Key="ItemComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#2f2d2b"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ItemCreateButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#878e4c"/>
            <Setter Property="BorderBrush" Value="#5a5f3a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#9ba05c"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#6b7339"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Item Creator"
                   FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,25"
                   Foreground="#ffffff"/>

        <!-- Input Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Item Name:" Style="{StaticResource ItemLabelStyle}"/>
                <TextBox x:Name="ItemNameTextBox" Style="{StaticResource ItemInputTextBoxStyle}"
                         Text="My Item"/>

                <TextBlock Text="Item ID:" Style="{StaticResource ItemLabelStyle}"/>
                <TextBox x:Name="ItemIdTextBox" Style="{StaticResource ItemInputTextBoxStyle}"
                         Text="myitem"/>

                <TextBlock Text="Texture:" Style="{StaticResource ItemLabelStyle}"/>
                <ComboBox x:Name="TextureComboBox" Style="{StaticResource ItemComboBoxStyle}"
                          SelectionChanged="TextureComboBox_SelectionChanged"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,25,0,0">
            <Button Content="Create Item" Style="{StaticResource ItemCreateButtonStyle}"
                    Click="CreateItemButton_Click"/>
            <Button Content="Cancel" Style="{StaticResource ItemCreateButtonStyle}"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="VScreator.ItemCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VScreator"
        mc:Ignorable="d"
        Title="Create New Item" Height="600" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#1f1d1b"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Window.Resources>
        <Style x:Key="ItemInputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#2f2d2b"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ItemLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

        <Style x:Key="ItemComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <ToggleButton
                                Name="ToggleButton"
                                Grid.Column="2"
                                Focusable="false"
                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="20" />
                                            </Grid.ColumnDefinitions>
                                            <Border
                                                x:Name="Border"
                                                Grid.ColumnSpan="2"
                                                CornerRadius="3"
                                                Background="#404040"
                                                BorderBrush="#404040"
                                                BorderThickness="1" />
                                            <Path
                                                x:Name="Arrow"
                                                Grid.Column="1"
                                                Fill="#ffffff"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Data="M 0 0 L 4 4 L 8 0 Z"/>
                                        </Grid>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter
                                Name="ContentSite"
                                IsHitTestVisible="False"
                                Content="{TemplateBinding SelectionBoxItem}"
                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left" />
                            <Popup
                                Name="Popup"
                                Placement="Bottom"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                AllowsTransparency="True"
                                Focusable="False"
                                PopupAnimation="Slide">
                                <Grid
                                    Name="DropDown"
                                    SnapsToDevicePixels="True"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border
                                        x:Name="DropDownBorder"
                                        Background="#2f2d2b"
                                        BorderThickness="1"
                                        BorderBrush="#404040"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ItemCreateButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#878e4c"/>
            <Setter Property="BorderBrush" Value="#5a5f3a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#9ba05c"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#6b7339"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Item Creator"
                   FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,25"
                   Foreground="#ffffff"/>

        <!-- Input Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Item Name:" Style="{StaticResource ItemLabelStyle}"/>
                <TextBox x:Name="ItemNameTextBox" Style="{StaticResource ItemInputTextBoxStyle}"
                         Text="My Item"/>

                <TextBlock Text="Item ID:" Style="{StaticResource ItemLabelStyle}"/>
                <TextBox x:Name="ItemIdTextBox" Style="{StaticResource ItemInputTextBoxStyle}"
                         Text="myitem"/>

                <TextBlock Text="Texture:" Style="{StaticResource ItemLabelStyle}"/>
                <ComboBox x:Name="TextureComboBox" Style="{StaticResource ItemComboBoxStyle}"
                          SelectionChanged="TextureComboBox_SelectionChanged"/>

                <TextBlock Text="Shape:" Style="{StaticResource ItemLabelStyle}"/>
                <ComboBox x:Name="ShapeComboBox" Style="{StaticResource ItemComboBoxStyle}"
                          SelectionChanged="ShapeComboBox_SelectionChanged"/>

                <!-- Custom Display JSON Section -->
                <CheckBox x:Name="CustomJsonCheckBox" Content="Custom display json snippet"
                          Foreground="#ffffff" Margin="0,20,0,10" Checked="CustomJsonCheckBox_Checked" Unchecked="CustomJsonCheckBox_Unchecked"/>

                <GroupBox x:Name="CustomJsonGroupBox" Header="Custom JSON Snippet" Visibility="Collapsed" Margin="0,10,0,0">
                    <GroupBox.Style>
                        <Style TargetType="GroupBox">
                            <Setter Property="Background" Value="#2f2d2b"/>
                            <Setter Property="Foreground" Value="#ffffff"/>
                            <Setter Property="BorderBrush" Value="#404040"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Margin" Value="0,5"/>
                        </Style>
                    </GroupBox.Style>
                    <TextBox x:Name="CustomJsonTextBox" Style="{StaticResource ItemInputTextBoxStyle}"
                             TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                             Height="150" FontFamily="Consolas" FontSize="12"/>
                </GroupBox>

                <!-- Food Item Section -->
                <CheckBox x:Name="IsFoodCheckBox" Content="Is Item Food?"
                          Foreground="#ffffff" Margin="0,20,0,10" Checked="IsFoodCheckBox_Checked" Unchecked="IsFoodCheckBox_Unchecked"/>

                <GroupBox x:Name="FoodPropsGroupBox" Header="Food Props" Visibility="Collapsed" Margin="0,10,0,0">
                    <GroupBox.Style>
                        <Style TargetType="GroupBox">
                            <Setter Property="Background" Value="#2f2d2b"/>
                            <Setter Property="Foreground" Value="#ffffff"/>
                            <Setter Property="BorderBrush" Value="#404040"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Margin" Value="0,5"/>
                        </Style>
                    </GroupBox.Style>
                    <StackPanel>
                        <TextBlock Text="Food Category:" Style="{StaticResource ItemLabelStyle}" Margin="0,0,0,5"/>
                        <ComboBox x:Name="FoodCategoryComboBox" Style="{StaticResource ItemComboBoxStyle}">
                            <ComboBoxItem Content="Fruit"/>
                            <ComboBoxItem Content="Vegetable"/>
                            <ComboBoxItem Content="Protein"/>
                            <ComboBoxItem Content="Grain"/>
                            <ComboBoxItem Content="Dairy"/>
                        </ComboBox>

                        <TextBlock Text="Satiety:" Style="{StaticResource ItemLabelStyle}" Margin="0,15,0,5"/>
                        <TextBox x:Name="SatietyTextBox" Style="{StaticResource ItemInputTextBoxStyle}" Text="20"/>

                        <TextBlock Text="Health:" Style="{StaticResource ItemLabelStyle}" Margin="0,15,0,5"/>
                        <TextBox x:Name="HealthTextBox" Style="{StaticResource ItemInputTextBoxStyle}" Text="8"/>

                        <TextBlock Text="Nutrition:" Style="{StaticResource ItemLabelStyle}" Margin="0,15,0,5"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Fruit:" Grid.Row="0" Grid.Column="0" Style="{StaticResource ItemLabelStyle}" Margin="0,5,10,5"/>
                            <TextBox x:Name="FruitNutritionTextBox" Grid.Row="0" Grid.Column="1" Style="{StaticResource ItemInputTextBoxStyle}" Text="6" Margin="0,5"/>

                            <TextBlock Text="Vegetable:" Grid.Row="1" Grid.Column="0" Style="{StaticResource ItemLabelStyle}" Margin="0,5,10,5"/>
                            <TextBox x:Name="VegetableNutritionTextBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource ItemInputTextBoxStyle}" Text="6" Margin="0,5"/>

                            <TextBlock Text="Protein:" Grid.Row="2" Grid.Column="0" Style="{StaticResource ItemLabelStyle}" Margin="0,5,10,5"/>
                            <TextBox x:Name="ProteinNutritionTextBox" Grid.Row="2" Grid.Column="1" Style="{StaticResource ItemInputTextBoxStyle}" Text="6" Margin="0,5"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                     HorizontalAlignment="Right" Margin="0,25,0,0">
            <Button x:Name="CreateItemButton" Content="Create Item" Style="{StaticResource ItemCreateButtonStyle}"
                    Click="CreateItemButton_Click"/>
            <Button Content="Cancel" Style="{StaticResource ItemCreateButtonStyle}"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="VScreator.ModWorkspaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VScreator"
        mc:Ignorable="d"
        Title="VScreator - Mod Workspace" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#1f1d1b">

    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#878e4c"/>
            <Setter Property="BorderBrush" Value="#5a5f3a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#9ba05c"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#6b7339"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WorkspaceLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#cccccc"/>
            <Setter Property="Padding" Value="5,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#ffffff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <Rectangle Width="20" Height="20"
                                       Fill="#FF4444"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       RadiusX="2" RadiusY="2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#404040"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="VScreator" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="20" Foreground="#ffffff"/>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Border Grid.Column="0" Background="#2f2d2b" Margin="10" CornerRadius="5">
                <StackPanel Margin="15">
                    <TextBlock Text="Mod Tools" Style="{StaticResource WorkspaceLabelStyle}"
                               Margin="0,0,0,20"/>

                    <!-- Content Tab Buttons -->
                    <StackPanel x:Name="ContentTabButtons">
                        <Button Content="Add Item" Style="{StaticResource SidebarButtonStyle}"
                                Click="AddItemButton_Click"/>

                        <Button Content="Add Block" Style="{StaticResource SidebarButtonStyle}"
                                Margin="0,10,0,0" Click="AddBlockButton_Click"/>

                        <Button Content="Add Recipe" Style="{StaticResource SidebarButtonStyle}"
                                Margin="0,10,0,0" Click="AddRecipeButton_Click"/>

                        <Button Content="Settings" Style="{StaticResource SidebarButtonStyle}"
                                Margin="0,30,0,0" Click="SettingsButton_Click"/>

                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Margin="0,10,0,0" Click="OpenModFolderButton_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Use the Open Mod Folder icon from Resources -->
                                        <Image Source="/VScreator;component/Resources/Open Mod Folder.png"
                                               Width="16"
                                               Height="16"
                                               Margin="0,0,8,0"/>
                                        <TextBlock Text="Open Mod Folder" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </StackPanel>

                    <!-- Resources Tab Button -->
                    <StackPanel x:Name="ResourcesTabButtons" Visibility="Collapsed">
                        <Button Content="Import Texture" Style="{StaticResource SidebarButtonStyle}"
                                Click="ImportTextureButton_Click"/>

                        <Button Content="Import Shape" Style="{StaticResource SidebarButtonStyle}"
                                Margin="0,10,0,0" Click="ImportModelButton_Click"/>
                    </StackPanel>

                    <Button Content="Back to Menu" Style="{StaticResource SidebarButtonStyle}"
                            Margin="0,30,0,0" Click="BackToMenuButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Main Workspace Area -->
            <Border Grid.Column="1" Background="#2f2d2b" Margin="10" CornerRadius="5">
                <Grid>
                    <!-- Delete Button - positioned in top-right corner of workspace -->
                    <Button x:Name="DeleteTextureButton"
                            Style="{StaticResource DeleteButtonStyle}"
                            Click="DeleteTextureButton_Click"
                            ToolTip="Delete selected texture or shape"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,15,15,0"/>

                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Tab Selection -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <Button Content="Content" Style="{StaticResource TabButtonStyle}"
                                    Click="ContentTab_Click" Tag="Content"/>
                            <TextBlock Text=" | " Foreground="#ffffff" FontSize="16" Margin="10,0"/>
                            <Button Content="Resources" Style="{StaticResource TabButtonStyle}"
                                    Click="ResourcesTab_Click" Tag="Resources"/>
                        </StackPanel>

                        <!-- Workspace Content Area -->
                        <Border Grid.Row="1" Background="#1f1d1b" Margin="0,20,0,0" CornerRadius="5">
                            <Grid Margin="20">
                                <!-- Content Tab - Items and Blocks List -->
                                <ScrollViewer x:Name="ContentTabContent">
                                    <StackPanel Margin="20">
                                        <!-- Items Section -->
                                        <TextBlock x:Name="ItemsHeader"
                                                   Text="Items:"
                                                   Style="{StaticResource WorkspaceLabelStyle}"
                                                   Margin="0,0,0,15"/>

                                        <ListView x:Name="ItemsListView"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  SelectionChanged="ItemsListView_SelectionChanged"
                                                  Margin="0,0,0,30">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#2f2d2b" Margin="5" Padding="10" CornerRadius="3">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="200"/>
                                                                <ColumnDefinition Width="150"/>
                                                                <ColumnDefinition Width="100"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Text="{Binding Name}"
                                                                       Foreground="#ffffff"
                                                                       FontSize="14"
                                                                       FontWeight="SemiBold"
                                                                       Grid.Column="0"/>

                                                            <TextBlock Text="{Binding Code}"
                                                                       Foreground="#cccccc"
                                                                       FontSize="12"
                                                                       Grid.Column="1"/>

                                                            <TextBlock Text="{Binding Type}"
                                                                       Foreground="#cccccc"
                                                                       FontSize="12"
                                                                       Grid.Column="2"/>

                                                            <Button Content="Edit"
                                                                    Tag="{Binding Code}"
                                                                    Click="EditItemButton_Click"
                                                                    Style="{StaticResource SidebarButtonStyle}"
                                                                    Width="60"
                                                                    Height="25"
                                                                    FontSize="10"
                                                                    Grid.Column="3"
                                                                    HorizontalAlignment="Right"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>

                                        <!-- Blocks Section -->
                                        <TextBlock x:Name="BlocksHeader"
                                                   Text="Blocks:"
                                                   Style="{StaticResource WorkspaceLabelStyle}"
                                                   Margin="0,0,0,15"/>

                                        <ListView x:Name="BlocksListView"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  SelectionChanged="BlocksListView_SelectionChanged">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#2f2d2b" Margin="5" Padding="10" CornerRadius="3">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="200"/>
                                                                <ColumnDefinition Width="150"/>
                                                                <ColumnDefinition Width="100"/>
                                                                <ColumnDefinition Width="100"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Text="{Binding Name}"
                                                                       Foreground="#ffffff"
                                                                       FontSize="14"
                                                                       FontWeight="SemiBold"
                                                                       Grid.Column="0"/>

                                                            <TextBlock Text="{Binding Code}"
                                                                       Foreground="#cccccc"
                                                                       FontSize="12"
                                                                       Grid.Column="1"/>

                                                            <TextBlock Text="{Binding Type}"
                                                                       Foreground="#cccccc"
                                                                       FontSize="12"
                                                                       Grid.Column="2"/>

                                                            <TextBlock Text="{Binding Resistance, StringFormat={}{0:F1}}"
                                                                       Foreground="#cccccc"
                                                                       FontSize="12"
                                                                       Grid.Column="3"/>

                                                            <Button Content="Edit"
                                                                    Tag="{Binding Code}"
                                                                    Click="EditBlockButton_Click"
                                                                    Style="{StaticResource SidebarButtonStyle}"
                                                                    Width="60"
                                                                    Height="25"
                                                                    FontSize="10"
                                                                    Grid.Column="4"
                                                                    HorizontalAlignment="Right"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>

                                        <!-- Recipes Section -->
                                        <TextBlock x:Name="RecipesHeader"
                                                   Text="Recipes:"
                                                   Style="{StaticResource WorkspaceLabelStyle}"
                                                   Margin="0,30,0,15"/>

                                        <ListView x:Name="RecipesListView"
                                                  Background="Transparent"
                                                  BorderThickness="0">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#2f2d2b" Margin="5" Padding="10" CornerRadius="3">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="200"/>
                                                                <ColumnDefinition Width="150"/>
                                                                <ColumnDefinition Width="100"/>
                                                                <ColumnDefinition Width="100"/>
                                                                <ColumnDefinition Width="100"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Text="{Binding Name}"
                                                                       Foreground="#ffffff"
                                                                       FontSize="14"
                                                                       FontWeight="SemiBold"
                                                                       Grid.Column="0"/>

                                                            <TextBlock Text="{Binding OutputType}"
                                                                       Foreground="#cccccc"
                                                                       FontSize="12"
                                                                       Grid.Column="1"/>

                                                            <TextBlock Text="{Binding OutputCode}"
                                                                       Foreground="#cccccc"
                                                                       FontSize="12"
                                                                       Grid.Column="2"/>

                                                            <TextBlock Text="{Binding IngredientCount}"
                                                                       Foreground="#cccccc"
                                                                       FontSize="12"
                                                                       Grid.Column="3"/>

                                                            <TextBlock Text="{Binding GridSize}"
                                                                       Foreground="#cccccc"
                                                                       FontSize="12"
                                                                       Grid.Column="4"/>

                                                            <Button Content="Edit"
                                                                    Tag="{Binding Name}"
                                                                    Click="EditRecipeButton_Click"
                                                                    Style="{StaticResource SidebarButtonStyle}"
                                                                    Width="60"
                                                                    Height="25"
                                                                    FontSize="10"
                                                                    Grid.Column="5"
                                                                    HorizontalAlignment="Right"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </StackPanel>
                                </ScrollViewer>

                                <!-- Resources Tab Content -->
                                <ScrollViewer x:Name="ResourcesTabContent"
                                              Visibility="Collapsed">
                                    <StackPanel Margin="20">
                                        <!-- Item Textures Section -->
                                        <TextBlock x:Name="ItemTexturesHeader"
                                                   Text="Item Textures:"
                                                   Style="{StaticResource WorkspaceLabelStyle}"
                                                   Margin="0,0,0,15"/>

                                        <WrapPanel x:Name="ItemTexturesPanel"
                                                   Orientation="Horizontal"
                                                   Margin="0,0,0,30"/>

                                        <!-- Block Textures Section -->
                                        <TextBlock x:Name="BlockTexturesHeader"
                                                   Text="Block Textures:"
                                                   Style="{StaticResource WorkspaceLabelStyle}"
                                                   Margin="0,0,0,15"/>

                                        <WrapPanel x:Name="BlockTexturesPanel"
                                                   Orientation="Horizontal"/>

                                        <!-- Item Shapes Section -->
                                        <TextBlock x:Name="ItemModelsHeader"
                                                   Text="Item Shapes:"
                                                   Style="{StaticResource WorkspaceLabelStyle}"
                                                   Margin="0,30,0,15"/>

                                        <WrapPanel x:Name="ItemModelsPanel"
                                                   Orientation="Horizontal"
                                                   Margin="0,0,0,30"/>

                                        <!-- Block Shapes Section -->
                                        <TextBlock x:Name="BlockModelsHeader"
                                                   Text="Block Shapes:"
                                                   Style="{StaticResource WorkspaceLabelStyle}"
                                                   Margin="0,0,0,15"/>

                                        <WrapPanel x:Name="BlockModelsPanel"
                                                   Orientation="Horizontal"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
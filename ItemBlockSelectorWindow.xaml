<Window x:Class="VScreator.ItemBlockSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VScreator"
        mc:Ignorable="d"
        Title="Select Item or Block" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1f1d1b"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2f2d2b"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5,5,0,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3f3d3b"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1f1d1b"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Item/Block Icon Style -->
        <Style x:Key="ItemIconStyle" TargetType="Border">
            <Setter Property="Background" Value="#2f2d2b"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Select Item or Block"
                   FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,25"
                   Foreground="#ffffff"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Tabs Section -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                <Button x:Name="ItemsTabButton" Content="Items"
                        Style="{StaticResource TabButtonStyle}"
                        Click="ItemsTabButton_Click"/>
                <Button x:Name="BlocksTabButton" Content="Blocks"
                        Style="{StaticResource TabButtonStyle}"
                        Click="BlocksTabButton_Click"/>
                <Button x:Name="CustomTabButton" Content="Custom"
                        Style="{StaticResource TabButtonStyle}"
                        Click="CustomTabButton_Click"/>
            </StackPanel>

            <!-- Search Bar -->
            <TextBox x:Name="SearchTextBox" Grid.Row="1" Background="#2f2d2b" Foreground="#ffffff"
                     BorderBrush="#404040" Margin="0,50,0,10" Padding="8"
                     TextChanged="SearchTextBox_TextChanged"/>

            <!-- Items/Blocks Display Area -->
            <Border Grid.Row="1" Background="#2f2d2b" CornerRadius="3" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="ItemsPanel">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" ItemWidth="75" ItemHeight="75"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ItemIconStyle}" Margin="3"
                                        MouseLeftButtonDown="ItemBorder_MouseLeftButtonDown"
                                        Tag="{Binding}">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image Width="40" Height="40" Margin="2" Stretch="Uniform"
                                               Source="{Binding Icon}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding DisplayName}" Foreground="#cccccc"
                                                   HorizontalAlignment="Center" TextWrapping="Wrap"
                                                   MaxWidth="60" Margin="1" FontSize="7" TextAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                     HorizontalAlignment="Right" Margin="0,25,0,0">
            <Button Content="Cancel" Style="{StaticResource TabButtonStyle}"
                    Click="CancelButton_Click" Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</Window>
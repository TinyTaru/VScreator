<Window x:Class="VScreator.CropCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VScreator"
        mc:Ignorable="d"
        Title="Crop Creator" Height="600" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#1f1d1b"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Window.Resources>
        <Style x:Key="CropInputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#2f2d2b"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="CropLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

        <Style x:Key="CropComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <ToggleButton
                                Name="ToggleButton"
                                Grid.Column="2"
                                Focusable="false"
                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="20" />
                                            </Grid.ColumnDefinitions>
                                            <Border
                                                x:Name="Border"
                                                Grid.ColumnSpan="2"
                                                CornerRadius="3"
                                                Background="#404040"
                                                BorderBrush="#404040"
                                                BorderThickness="1" />
                                            <Path
                                                x:Name="Arrow"
                                                Grid.Column="1"
                                                Fill="#ffffff"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Data="M 0 0 L 4 4 L 8 0 Z"/>
                                        </Grid>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter
                                Name="ContentSite"
                                IsHitTestVisible="False"
                                Content="{TemplateBinding SelectionBoxItem}"
                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left" />
                            <Popup
                                Name="Popup"
                                Placement="Bottom"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                AllowsTransparency="True"
                                Focusable="False"
                                PopupAnimation="Slide">
                                <Grid
                                    Name="DropDown"
                                    SnapsToDevicePixels="True"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border
                                        x:Name="DropDownBorder"
                                        Background="#2f2d2b"
                                        BorderThickness="1"
                                        BorderBrush="#404040"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CropCreateButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#878e4c"/>
            <Setter Property="BorderBrush" Value="#5a5f3a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#9ba05c"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#6b7339"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,25,0,10"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Crop Creator"
                   FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,25"
                   Foreground="#ffffff"/>

        <!-- Input Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Basic Information Section -->
                <TextBlock Text="Basic Information" Style="{StaticResource SectionHeaderStyle}"/>

                <TextBlock Text="Name:" Style="{StaticResource CropLabelStyle}"/>
                <TextBox x:Name="CropNameTextBox" Style="{StaticResource CropInputTextBoxStyle}"
                         Text="My Crop"/>

                <TextBlock Text="ID:" Style="{StaticResource CropLabelStyle}"/>
                <TextBox x:Name="CropIdTextBox" Style="{StaticResource CropInputTextBoxStyle}"
                         Text="mycrop"/>

                <TextBlock Text="States:" Style="{StaticResource CropLabelStyle}"/>
                <TextBox x:Name="StatesTextBox" Style="{StaticResource CropInputTextBoxStyle}"
                         Text="1,2,3,4,5"/>

                <!-- Shapes Section -->
                <TextBlock Text="Shapes" Style="{StaticResource SectionHeaderStyle}"/>

                <TextBlock Text="State 1:" Style="{StaticResource CropLabelStyle}"/>
                <ComboBox x:Name="Shape1ComboBox" Style="{StaticResource CropComboBoxStyle}"
                          SelectionChanged="ShapeComboBox_SelectionChanged"/>

                <TextBlock Text="State 2:" Style="{StaticResource CropLabelStyle}"/>
                <ComboBox x:Name="Shape2ComboBox" Style="{StaticResource CropComboBoxStyle}"
                          SelectionChanged="ShapeComboBox_SelectionChanged"/>

                <TextBlock Text="State 3:" Style="{StaticResource CropLabelStyle}"/>
                <ComboBox x:Name="Shape3ComboBox" Style="{StaticResource CropComboBoxStyle}"
                          SelectionChanged="ShapeComboBox_SelectionChanged"/>

                <TextBlock Text="State 4:" Style="{StaticResource CropLabelStyle}"/>
                <ComboBox x:Name="Shape4ComboBox" Style="{StaticResource CropComboBoxStyle}"
                          SelectionChanged="ShapeComboBox_SelectionChanged"/>

                <TextBlock Text="State 5:" Style="{StaticResource CropLabelStyle}"/>
                <ComboBox x:Name="Shape5ComboBox" Style="{StaticResource CropComboBoxStyle}"
                          SelectionChanged="ShapeComboBox_SelectionChanged"/>

                <!-- Textures Section -->
                <TextBlock Text="Textures" Style="{StaticResource SectionHeaderStyle}"/>

                <TextBlock Text="State 1:" Style="{StaticResource CropLabelStyle}"/>
                <ComboBox x:Name="Texture1ComboBox" Style="{StaticResource CropComboBoxStyle}"
                          SelectionChanged="TextureComboBox_SelectionChanged"/>

                <TextBlock Text="State 2:" Style="{StaticResource CropLabelStyle}"/>
                <ComboBox x:Name="Texture2ComboBox" Style="{StaticResource CropComboBoxStyle}"
                          SelectionChanged="TextureComboBox_SelectionChanged"/>

                <TextBlock Text="State 3:" Style="{StaticResource CropLabelStyle}"/>
                <ComboBox x:Name="Texture3ComboBox" Style="{StaticResource CropComboBoxStyle}"
                          SelectionChanged="TextureComboBox_SelectionChanged"/>

                <TextBlock Text="State 4:" Style="{StaticResource CropLabelStyle}"/>
                <ComboBox x:Name="Texture4ComboBox" Style="{StaticResource CropComboBoxStyle}"
                          SelectionChanged="TextureComboBox_SelectionChanged"/>

                <TextBlock Text="State 5:" Style="{StaticResource CropLabelStyle}"/>
                <ComboBox x:Name="Texture5ComboBox" Style="{StaticResource CropComboBoxStyle}"
                          SelectionChanged="TextureComboBox_SelectionChanged"/>

                <!-- Drops Section -->
                <TextBlock Text="Drops" Style="{StaticResource SectionHeaderStyle}"/>

                <TextBlock Text="Seeds:" Style="{StaticResource CropLabelStyle}"/>
                <TextBox x:Name="SeedsTextBox" Style="{StaticResource CropInputTextBoxStyle}"
                         Text="seeds-mycrop"/>

                <TextBlock Text="Produce:" Style="{StaticResource CropLabelStyle}"/>
                <TextBox x:Name="ProduceTextBox" Style="{StaticResource CropInputTextBoxStyle}"
                         Text="vegetable-mycrop"/>

                <!-- Crop Properties Section -->
                <TextBlock Text="Crop Properties" Style="{StaticResource SectionHeaderStyle}"/>

                <TextBlock Text="Required Nutrient:" Style="{StaticResource CropLabelStyle}"/>
                <ComboBox x:Name="RequiredNutrientComboBox" Style="{StaticResource CropComboBoxStyle}">
                    <ComboBoxItem Content="N" IsSelected="True"/>
                    <ComboBoxItem Content="P"/>
                    <ComboBoxItem Content="K"/>
                </ComboBox>

                <TextBlock Text="Nutrient Consumption:" Style="{StaticResource CropLabelStyle}"/>
                <TextBox x:Name="NutrientConsumptionTextBox" Style="{StaticResource CropInputTextBoxStyle}"
                         Text="40"/>

                <TextBlock Text="Total Growth Months:" Style="{StaticResource CropLabelStyle}"/>
                <TextBox x:Name="GrowthMonthsTextBox" Style="{StaticResource CropInputTextBoxStyle}"
                         Text="2.0"/>

                <TextBlock Text="Cold Damage Below:" Style="{StaticResource CropLabelStyle}"/>
                <TextBox x:Name="ColdDamageTextBox" Style="{StaticResource CropInputTextBoxStyle}"
                         Text="-5"/>

                <TextBlock Text="Heat Damage Above:" Style="{StaticResource CropLabelStyle}"/>
                <TextBox x:Name="HeatDamageTextBox" Style="{StaticResource CropInputTextBoxStyle}"
                         Text="32"/>

                <TextBlock Text="Multiple Harvests:" Style="{StaticResource CropLabelStyle}"/>
                <CheckBox x:Name="MultipleHarvestsCheckBox" Content="Allow multiple harvests"
                          Foreground="#ffffff" FontSize="14" Margin="0,5,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                     HorizontalAlignment="Right" Margin="0,25,0,0">
            <Button x:Name="CreateCropButton" Content="Create Crop" Style="{StaticResource CropCreateButtonStyle}"
                    Click="CreateCropButton_Click"/>
            <Button Content="Cancel" Style="{StaticResource CropCreateButtonStyle}"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="VScreator.ModCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VScreator"
        mc:Ignorable="d"
        Title="Create New Mod" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#1f1d1b">

    <Window.Resources>
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#2f2d2b"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="CreateButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#878e4c"/>
            <Setter Property="BorderBrush" Value="#5a5f3a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#9ba05c"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#6b7339"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Create New Mod" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,30" Foreground="#ffffff"/>

        <!-- Input Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Mod Name:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="ModNameTextBox" Style="{StaticResource InputTextBoxStyle}"
                         Text="My Awesome Mod"/>

                <TextBlock Text="Mod ID:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="ModIdTextBox" Style="{StaticResource InputTextBoxStyle}"
                         Text="myawesomemod"/>

                <TextBlock Text="Author:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="AuthorTextBox" Style="{StaticResource InputTextBoxStyle}"
                         Text="Your Name"/>

                <TextBlock Text="Description:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="DescriptionTextBox" Style="{StaticResource InputTextBoxStyle}"
                         Text="A description of your mod" Height="80" TextWrapping="Wrap"
                         AcceptsReturn="True"/>

                <TextBlock Text="Version:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="VersionTextBox" Style="{StaticResource InputTextBoxStyle}"
                         Text="1.0.0"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="Create Mod" Style="{StaticResource CreateButtonStyle}"
                    Width="150" Click="CreateModButton_Click"/>
            <Button Content="Cancel" Style="{StaticResource CreateButtonStyle}"
                    Width="100" Margin="20,0,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>